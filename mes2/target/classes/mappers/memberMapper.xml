<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
  
  
  <mapper namespace="com.mes2.mapper.MemberMapper">
  
  	<!-- 로그인 -->
  		<select id ="loginMember" resultType="com.mes2.domain.MemberDTO">
  			select * from employees
  			where emp_id=#{emp_id} and emp_pw=#{emp_pw}
  		</select>
  
  
  	<!-- 사원정보조회  -->
  		<select id="getMember" resultType="com.mes2.domain.MemberDTO">
  			select * from employees
  			where emp_id=#{emp_id}
  		</select>
  
  
  	<!-- 사원정보수정 -->
  	<update id="updateMember">
  		update employees set emp_name=#{emp_name},emp_department=#{emp_department},emp_position=#{emp_position},emp_tel=#{emp_tel},emp_auth=#{emp_auth},emp_update_date=now()
  		where emp_pw=#{emp_pw} and emp_id=#{emp_id}
  	</update>
  
  
  
    <!-- 사원정보삭제 -->
  	<delete id="deleteMember">
  		delete from employees 
  		where emp_pw =#{emp_pw} and emp_id=#{emp_id}
  	</delete>
  
   
  	
  	<!-- 사원등록 -->
  	<insert id="insertMember">
  		insert into employees(emp_id,emp_pw,emp_name,emp_department,emp_position,emp_jumin,emp_joindate,emp_tel,emp_auth)
  		values(#{emp_id},#{emp_pw},#{emp_name},#{emp_department},#{emp_position},#{emp_jumin},#{emp_joindate},#{emp_tel},#{emp_auth})	
  	</insert>
  	
  
 	<!--사원목록리스트--> 	
  	<select id="getMemberList" resultType="com.mes2.domain.MemberDTO">
  		select*from employees
  	</select>
  	
  	
  
  
  
  
  
  
  
  
  </mapper>